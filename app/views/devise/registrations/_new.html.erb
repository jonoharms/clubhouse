<h3>New to Clubhouse? Sign up</h3>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  	<%= devise_error_messages! %>

  	<div>
  		<%= f.email_field :email, :class=>"form-control", autofocus: true, placeholder: "Email" %>
  	</div>

	<div>
		<%= f.password_field :password, :class=>"form-control", autocomplete: "off", placeholder: "Password" %></div>

	<div>
  		<%= f.password_field :password_confirmation, :class=>"form-control", autocomplete: "off", placeholder: "Password confirmation" %>
  	</div>

  	<div><%= f.submit "Sign up", :class=>"btn btn-warning pull-right" %></div>

<% end %>
